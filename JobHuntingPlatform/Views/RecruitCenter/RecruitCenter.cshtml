<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>招聘中心</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/RecruitCenter/recruitCenter.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
</head>
<body>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
        <legend>我的招聘中心&gt;&gt;Recruit Center</legend>
    </fieldset>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <button class="layui-btn layui-btn-normal" onclick="btn_addRecruit()">发布招聘</button>
    </blockquote>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <form class="layui-form">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">招聘查询</label>
                    <div class="layui-input-block">
                        <input type="text" name="input" id="input" lay-verify="required" style="width:400px;" placeholder="请输入相关职位，支持模糊查询" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <button type="button" class="layui-btn layui-btn-normal" id="search">
                    <i class="layui-icon">&#xe615;</i>
                </button>
            </div>
        </form>
    </blockquote>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <!--招聘信息的表格-->
        <table id="table_recruit" lay-filter="table_recruit"></table>
    </blockquote>
    <!--新增招聘的弹窗-->
    <div style="padding-left:20px;padding-right:20px;padding-top:20px" id="div_addRecruit" hidden>
        <form class="layui-form">
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>职位名称</label>
                <div class="layui-input-inline">
                    <input type="text" name="offer" id="offer" lay-verify="required" style="width:400px;" placeholder="请输入职位名称" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>应聘要求</label>
                <div class="layui-input-inline">
                    <input type="text" name="require" id="require" lay-verify="required" style="width:400px;" placeholder="请输入应聘要求" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>招聘人数</label>
                <div class="layui-input-inline">
                    <input type="text" name="number" id="number" lay-verify="required|number" placeholder="请输入招聘人数" autocomplete="off" class="layui-input">
                </div>
            </div>

            <!--以下属性不显示，便于更新账户文件-->
            <div class="layui-form-item" hidden>
                <textarea id="recruitId" name="id"></textarea>
                <textarea id="companyId" name="companyId"></textarea>
                <textarea id="time" name="time"></textarea>
            </div>
        </form>
    </div>

    <!--修改表格的工具列-->
    <script type="text/html" id="toolbar">
        <a class="operation" lay-event="edit" title="修改招聘信息">
            <i class="layui-icon layui-icon-edit"></i>修改
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="del" title="删除招聘信息">
            <i class="layui-icon layui-icon-delete"></i>删除
        </a>
    </script>
</body>
</html>
