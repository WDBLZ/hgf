<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>资讯管理</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/ArticleManage/articleManage.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
</head>
<body>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
        <legend>资讯管理&gt;&gt;Article Management</legend>
    </fieldset>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <button class="layui-btn layui-btn-normal" onclick="btn_addArticle()">新增资讯</button>
    </blockquote>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <form class="layui-form">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">资讯查询</label>
                    <div class="layui-input-block">
                        <input type="text" name="input" id="input" lay-verify="required" style="width:400px;" placeholder="请输入文章名称，支持模糊查询" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <button type="button" class="layui-btn layui-btn-normal" id="search">
                    <i class="layui-icon">&#xe615;</i>
                </button>
            </div>
        </form>
    </blockquote>

    <blockquote class="layui-elem-quote layui-quote-nm">
        <!--资讯信息的表格-->
        <table id="table_article" lay-filter="table_article"></table>
    </blockquote>
    <!--新增资讯的弹窗-->
    <div style="padding-left:20px;padding-right:20px;padding-top:20px" id="div_addArticle" hidden>
        <form class="layui-form">
            <div class="layui-form-item">
                <label class="layui-form-label"><span style="color:red">*</span>文章标题</label>
                <div class="layui-input-inline">
                    <input type="text" name="title" id="title" lay-verify="required" placeholder="请输入文章标题" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">文章</label>
                <div class="layui-input-inline">
                    <button type="button" class="layui-btn layui-btn-sm" id="btn_select"><i class="layui-icon layui-icon-upload-drag"></i>选择pdf</button>
                    <button type="button" class="layui-btn layui-btn-sm" id="btn_upload"><i class="layui-icon layui-icon-upload"></i>开始上传</button>
                </div>
                <div id="article"></div>
            </div>

            <!--以下属性不显示，便于更新账户文件-->
            <div class="layui-form-item" hidden>
                <textarea id="articlePath" name="articlePath"></textarea>
            </div>
        </form>
    </div>

    <!--修改表格的状态列-->
    <script type="text/html" id="statusbar">
        {{# if(d.IsTop === 0){ }}
        未置顶
        {{#  } }}
        {{# if(d.IsTop === 1){ }}
        <span style="color: #A2CD5A">已置顶</span>
        {{#  } }}
    </script>

    <!--修改表格的工具列-->
    <script type="text/html" id="toolbar">
        {{# if(d.IsTop === 0){ }}
        <a class="operation" lay-event="view" title="阅览此文章">
            <i class="layui-icon layui-icon-read"></i>阅览
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="top" title="置顶此文章">
            <i class="layui-icon layui-icon-top"></i>置顶
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="del" title="删除此文章">
            <i class="layui-icon layui-icon-delete"></i>删除
        </a>
        {{#  } }}
        {{# if(d.IsTop === 1){ }}
        <a class="operation" lay-event="view" title="阅览此文章">
            <i class="layui-icon layui-icon-read"></i>阅览
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="no-top" title="取消置顶此文章">
            <i class="layui-icon layui-icon-unlink"></i>取消置顶
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="del" title="删除此文章">
            <i class="layui-icon layui-icon-delete"></i>删除
        </a>
        {{#  } }}
    </script>
</body>
</html>
