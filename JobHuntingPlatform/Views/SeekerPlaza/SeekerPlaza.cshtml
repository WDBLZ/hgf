<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>人才广场</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/SeekerPlaza/seekerPlaza.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
</head>
<body>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
        <legend>人才广场&gt;&gt;Seeker Plaza</legend>
    </fieldset>
    <blockquote class="layui-elem-quote layui-quote-nm">
        <form class="layui-form">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">人才查询</label>
                    <div class="layui-input-block">
                        <input type="text" name="input" id="input" lay-verify="required" style="width:400px;" placeholder="请输入姓名，支持模糊查询" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <button type="button" class="layui-btn layui-btn-normal" id="search">
                    <i class="layui-icon">&#xe615;</i>
                </button>
            </div>
        </form>
    </blockquote>

    <blockquote class="layui-elem-quote layui-quote-nm">
        <!--用户信息的表格-->
        <table id="table_user" lay-filter="table_user"></table>
    </blockquote>

    <!--修改表格的工具列-->
    <script type="text/html" id="toolbar">
        <a class="operation" lay-event="watch" title="查看简历">
            <i class="layui-icon layui-icon-list"></i>查看简历
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="invite" title="发出邀请">
            <i class="layui-icon layui-icon-release"></i>邀请
        </a>
    </script>
</body>
</html>
